pipeline {
    agent any
    environment{
        FIREBASE_DEPLOY_TOKEN = credentials('Firebase-Token')
    }
stages{
   
        stage('Testing Env'){
            steps{
                
                sh 'firebase  deploy -P cal-test-575bd --token "$FIREBASE_DEPLOY_TOKEN"'

                }
            }

        stage('Staging Env'){
            steps{
               
                sh 'firebase  deploy -p --token "$FIREBASE_DEPLOY_TOKEN"'
                echo "Staging"
                }
            }

        stage('Production Env'){
            steps{
               
                sh 'firebase  deploy -P  --token "$FIREBASE_DEPLOY_TOKEN"'
                echo "Production"
                }
        }
}
}

